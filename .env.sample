# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TG_BOT_TOKEN=your_bot_token_here
TG_WEBHOOK_URL=https://your-domain.com/webhook
TG_WEBHOOK_PATH=/webhook
TG_WEBHOOK_PORT=8080

# OpenAI Realtime API
# Получите API ключ на https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
REALTIME_MODEL=gpt-4o-realtime-preview
REALTIME_WS_URL=wss://api.openai.com/v1/realtime

# YCLIENTS Integration (опционально, пока используются моки)
YC_PARTNER_TOKEN=your_partner_token_here
YC_USER_TOKEN=your_user_token_here
YC_BASE_URL=https://api.yclients.com/api/v1

# Application Settings
LOG_LEVEL=INFO
DEBUG=false

# Rate Limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_WINDOW=30

# Streaming Settings
STREAM_THROTTLE_MS=300
RESPONSE_TIMEOUT=10
MAX_RESPONSE_LENGTH=1500

# WebSocket Settings
WS_CONNECT_TIMEOUT=10
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10
WS_MAX_RETRIES=3

# Legacy settings (для совместимости с базовыми ботами)
BOT_TOKEN=your_bot_token_here
POLLING_TIMEOUT=10
REQUEST_TIMEOUT=30
